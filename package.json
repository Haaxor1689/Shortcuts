{
	"name": "template",
	"homepage": "https://haaxor1689.github.io/Shortcuts",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"eject": "react-scripts eject",
		"ncu": "npx npm-check-updates",
		"lint:prettier": "./node_modules/.bin/prettier --write \"src/**/*.{ts,tsx}\"",
		"lint:es": "./node_modules/.bin/eslint ./src/**/*.{ts,tsx} --fix",
		"lint:css": "./node_modules/.bin/stylelint ./src/**/*.{ts,tsx}",
		"lint:ts": "./node_modules/.bin/tsc",
		"lint:all": "yarn lint:es && yarn lint:ts && yarn lint:css",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build"
	},
	"dependencies": {
		"@emotion/core": "^10.0.35",
		"@emotion/is-prop-valid": "^0.8.8",
		"@emotion/styled": "^10.0.27",
		"emotion-theming": "^10.0.27",
		"lodash-es": "^4.17.15",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-icons": "^3.11.0",
		"react-scripts": "3.4.3",
		"styled-system": "^5.1.5"
	},
	"devDependencies": {
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.0",
		"@types/react-dom": "^16.9.0",
		"@types/react-icons": "^3.0.0",
		"@types/styled-system": "^5.1.10",
		"@typescript-eslint/eslint-plugin": "^3.9.1",
		"@typescript-eslint/parser": "^3.9.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"eslint-plugin-emotion": "^10.0.27",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-no-loops": "^0.3.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.6",
		"eslint-plugin-react-hooks": "4.1.0",
		"gh-pages": "^3.1.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"stylelint": "^13.6.1",
		"stylelint-config-recommended": "^3.0.0",
		"typescript": "~3.7.2",
		"typescript-styled-plugin": "^0.15.0"
	},
	"lint-staged": {
		"{src/**,.storybook,.}/*.{js,jsx,ts,tsx,json,md}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
